<!--newGroup.wxml-->
<view class="page">
  <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
          <view class="weui-cell__bd">
              <input class="weui-input" bindinput="onInputName" placeholder="群名称" />
          </view>
      </view>
  </view>

  <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell">
          <view class="weui-cell__bd">
              <textarea class="weui-textarea" bindinput="onChangeCount" placeholder="简要描述这个群" style="height: 3.3em" />
              <view class="weui-textarea-counter" >{{textcount}}/200</view>
          </view>
      </view>
  </view>

  <view class="page__bd page__bd_spacing" bindtap="onnewGroup">
    <button class="weui-btn" type="primary" bindtap="openConfirm">确认创建</button>
  </view>

</view>